      meta(name='twitter:image:src', content='https://shiftnudge.s3.us-east-1.amazonaws.com/web/shift-nudge-card-1.png')

      //- Open Graph data
      meta(property='og:title', content='Shift Nudge')
      meta(property='og:type', content='article')
      meta(property='og:url', content='http://shiftnudge.com')
      meta(property='og:image', content='https://shiftnudge.s3.us-east-1.amazonaws.com/web/shift-nudge-card-1.png')
      meta(property='og:description', content="Shift Nudge is a new online course that covers all the nitty-gritty details of crafting the visual side of UI. The course is taught through the lens of UX, with a focus on designing beautiful and functional user interfaces.")
      meta(property='og:site_name', content='Shift Nudge')

